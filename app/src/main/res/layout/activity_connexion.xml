<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.arsene.mamieclafoutisandroid.ConnexionActivity"

    >

        <ImageView
            android:id="@+id/logo_mamie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_mamie"
            android:layout_marginTop="350dp"
            />
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:text="Connexion"
            android:textSize="30sp"
            android:textColor="@color/colorMamierose"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="50dp">

            <TextView
                android:text="Identifiant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorMamierose"
                android:layout_weight="1"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"/>
            <EditText
                android:id="@+id/inputIdentifiant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:layout_weight="2"
                android:layout_marginRight="15dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="Mot de passe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorMamierose"
                android:layout_weight="1"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"/>
            <EditText
                android:id="@+id/inputPwd"
                android:inputType="textPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:layout_weight="2"
                android:layout_marginRight="15dp"/>

        </LinearLayout>
        <Button
            android:id="@+id/bttnConnexion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Connexion  "
            android:background="@color/colorMamierose"
            android:layout_marginTop="50dp"
            android:textColor="@color/textColor"


            android:layout_gravity="center_horizontal"

            />
    </LinearLayout>
</RelativeLayout>
