<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <!--Layout produit image / prix-->
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Produit"
            android:textColor="@color/textColor" />

        <ImageView
            android:id="@+id/cmdProduitImgView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTop"/>

        <TextView
            android:id="@+id/cmdProduitNomTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="baguette"
            android:textColor="@color/textColor"/>

        <TextView
            android:id="@+id/cmdProduitPrixTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="prix : 5.50$ "
            android:textColor="@color/textColor"/>


    </LinearLayout>
    <!-- fin -->
    <!--Layout quantite / prix total-->
    <LinearLayout
        android:layout_weight="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">



            <!-- Layout prix total-->
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prix total"
                    android:textColor="@color/textColor"/>

                <TextView
                    android:id="@+id/cmdPrixTotalTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16.0$"
                    android:textColor="@color/textColor"
                    android:layout_marginTop="@dimen/marginTop"/>
            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/retirerCommande"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retirer"
            android:layout_gravity="end"/>

    </LinearLayout>

</LinearLayout>
